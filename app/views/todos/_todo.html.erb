<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="pull-right" style="padding-left: 5px"><%= link_to :view, todo_path(todo) %></div>
        <h4><strong>Title: <%= todo.title.capitalize %></strong></h4>
        <strong><div class="pull-right" style="padding-left: 5px">comments: <%= todo.comments.count %></div></strong>
        <strong><%= todo.created_at.strftime("Created on: %m/%d/%Y") %> </strong> <br>
        <strong>Created by: <%= todo.user.name %> </strong> <br>
        <% if todo.user.novice? %>
          <%= form_for [todo, Comment.new] do |f| %>
            <div class="form-group">
              <div> Comment: <%= f.text_field :title, class: 'form-control' %> </div>
              <div> <%= f.submit 'Post Comment', class: 'btn btn-default' %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
