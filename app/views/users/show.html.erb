<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <%= form_for [:admin, @user] do |f| %>
        <div class="form-group">
          <label for="name">Name</label>
          <%= f.text_field :name, class: "form-control col-md-8", disabled: :disabled %>
        </div>

        <div class="form-group">
          <label for="role">Email</label>
          <%= f.text_field :email, type: :email, class: 'form-control col-md-8', disabled: :disabled %>
        </div>
        <% if @user.expert? %>
          <div class="form-group">
            <label for="name">Profession</label>
            <%= f.text_field :profession, class: "form-control col-md-8" %>
          </div>

          <div class="form-group">
            <label for="name">Service</label>
            <%= f.text_field :service, class: "form-control col-md-8" %>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <%= link_to 'edit', edit_user_path(current_user), class: 'btn btn-default' %>
      </div>
    </div>

  </div>
</div>
