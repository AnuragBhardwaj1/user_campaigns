<div class="row">
  <div class="col-md-8 col-md-offset-4">
    <div class="row">
      <div class="col-md-12"><h1> Login</h1></div>
    </div>
    <%= form_tag('/session', method: :post) do %>
      <form>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-5">
              <label for="email">Email address</label>
               <%= email_field_tag(:email, nil,  required: true , class: 'form-control', placeholder: "abc@example.com") %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-xs-5">
              <label for="password">Password</label>
              <%= password_field_tag(:password, nil, required: true, minlength: "6", class: 'form-control', placeholder: "*******") %>
            </div>
          </div>
        </div>

      <div class="form-group">
          <div class="row">
            <div class="col-xs-4">
                <%= submit_tag("Sign In", class: 'btn btn-success') %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <span class="col-xs-2"><%#= link_to("Forgot Password?" , new_password_path ) %></span>
            <span class="col-xs-3"><%#= link_to("Resend Confirmation Email" , edit_confirmation_path ) %></span>
          </div>
        </div>

      </form>
    <% end -%>
  </div>
</div>

<% content_for :script do%>
    $('.login').addClass("active");
<% end %>
