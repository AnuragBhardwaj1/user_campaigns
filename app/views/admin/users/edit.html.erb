<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <%= form_for [:admin, @user] do |f| %>
        <div class="form-group">
          <label for="name">Name</label>
          <%= f.text_field :name, class: "form-control col-md-8" %>
        </div>

        <div class="form-group">
          <label for="role">Email</label>
          <%= f.text_field :email, type: :email, class: 'form-control col-md-8', disabled: :disabled %>
        </div>

        <div class="form-group">
          <label for="name">Profession</label>
          <%= f.text_field :profession, class: "form-control col-md-8" %>
        </div>

        <div class="form-group">
          <label for="name">Service</label>
          <%= f.text_field :service, class: "form-control col-md-8" %>
        </div>

        <div class="form-group">
          <label for="role">Role</label>
          <%= f.collection_radio_buttons :role, User.roles, :first, :first, class: 'checkbox' %>
        </div>


      <%= f.submit 'Update', class: 'btn btn-default' %>
      <% end %>
    </div>

  </div>
</div>
